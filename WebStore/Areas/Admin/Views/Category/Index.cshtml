@model IEnumerable<WebStore.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a href="~/Admin/Category/Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                <a href="~/Admin/Category/Edit/@item.ID">Edit</a> |
                <a href="~/Admin/Category/Details/@item.ID">Details</a> |
                <a href="~/Admin/Category/Delete/@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
